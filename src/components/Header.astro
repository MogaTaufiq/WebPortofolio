---
// src/components/Header.astro
---

<header class="fixed top-0 left-0 right-0 z-50 bg-slate-900/60 backdrop-blur-sm">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href="#" class="text-xl font-bold text-white">Moga Taufiq B.</a>
    
    <nav class="hidden md:flex space-x-8 text-sm font-medium">
      <a href="#about" class="text-gray-300 hover:text-white transition-colors">
        Tentang Saya
      </a>
      <a href="#projects" class="text-gray-300 hover:text-white transition-colors">
        Proyek
      </a>
      <a href="#skills" class="text-gray-300 hover:text-white transition-colors">
        Keahlian
      </a>
      <a href="#contact" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-md text-white transition-colors">
        Hubungi Saya
      </a>
    </nav>
    
    <button id="mobile-menu-button" class="md:hidden text-white">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-slate-900/80 backdrop-blur-sm">
    <a href="#about" class="block py-2 px-4 text-sm text-gray-300 hover:bg-slate-800">
      Tentang Saya
    </a>
    <a href="#projects" class="block py-2 px-4 text-sm text-gray-300 hover:bg-slate-800">
      Proyek
    </a>
    <a href="#skills" class="block py-2 px-4 text-sm text-gray-300 hover:bg-slate-800">
      Keahlian
    </a>
    <a href="#contact" class="block py-2 px-4 text-sm text-gray-300 hover:bg-slate-800">
      Hubungi Saya
    </a>
  </div>
</header>

<script>
  // Script untuk toggle menu mobile
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>