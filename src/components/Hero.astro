---
// src/components/Hero.astro
// Pastikan path ke gambar sudah benar
import fotoMoga from '../assets/foto moga.jpg';
---
<section 
  id="home" 
  class="relative min-h-screen flex items-center overflow-hidden"
>
  <div class="hero-gradient absolute top-0 left-0 right-0 h-full"></div>
  <div class="container mx-auto px-6 z-10 relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="text-center lg:text-left">
        <span class="text-blue-400 font-semibold">Moga Taufiq Bagidya</span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white my-4 leading-tight">
          Inovasi AI & <span class="text-blue-500">Desain Humanis</span> untuk Solusi Digital.
        </h1>
        <p class="text-lg text-gray-400 max-w-lg mx-auto lg:mx-0">
          A Computer Science student passionate about transforming complex problems into meaningful, user-centered digital products.
        </p>
        
        <div class="mt-8 flex flex-wrap justify-center lg:justify-start gap-4">
          <a href="#projects" class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-md text-white font-semibold transition-transform duration-300 hover:scale-105">
            Lihat Proyek
          </a>
          <a href="#contact" class="inline-flex items-center justify-center px-6 py-3 bg-gray-700/50 hover:bg-gray-700 rounded-md text-white font-semibold transition-transform duration-300 hover:scale-105">
            Hubungi Saya
          </a>
          {/* --- PERUBAHAN DI SINI --- */}
          {/* Tombol GitHub sekarang hanya ikon */}
          <a 
            href="https://github.com/mogataufiq" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center justify-center p-3 bg-gray-700/50 hover:bg-gray-700 rounded-md text-white font-semibold transition-transform duration-300 hover:scale-105"
            aria-label="Kunjungi profil GitHub saya"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
      <div class="hidden lg:block relative">
        <img 
          src={fotoMoga.src} 
          alt="Foto Moga Taufiq" 
          class="rounded-full shadow-2xl mx-auto border-4 border-gray-700 w-80 h-80 object-cover"
        />
        <div class="absolute -top-8 -left-8 w-32 h-32 bg-blue-500/20 rounded-full filter blur-3xl"></div>
        <div class="absolute -bottom-8 -right-8 w-32 h-32 bg-purple-500/20 rounded-full filter blur-3xl"></div>
      </div>
    </div>
  </div>
</section>
