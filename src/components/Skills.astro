---
// src/components/Skills.astro

const skills = [
  {
    title: "AI/ML Engineering",
    description: "Computer Vision, NLP, Model Training, Fine-tuning (YOLOv8, BERTopic).",
    icon: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  },
  {
    title: "Backend & DevOps",
    description: "Python (Flask, FastAPI), Docker, CI/CD, Nginx, Prometheus, MLflow.",
    icon: "M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01",
  },
  {
    title: "UI/UX Design",
    description: "Prototyping, Wireframing, User-Centered Design, Social Impact Focus.",
    icon: "M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z",
  },
  {
    title: "Leadership & Creative",
    description: "Project Management, Team Coordination, Creative Direction, Public Speaking.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  }
];
---

<section id="skills" class="min-h-screen flex items-center bg-slate-900/70">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-white">Keahlian Utama</h2>
      <p class="mt-4 max-w-2xl mx-auto text-gray-400">
        Kumpulan teknologi dan metodologi yang saya gunakan untuk membangun solusi.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {skills.map((skill) => (
        <div class="group rounded-lg p-6 shadow-lg text-center bg-gray-800/50 border border-transparent 
                    hover:border-blue-700 hover:bg-blue-900/40 
                    transition-all duration-300">
          <div class="mb-4 inline-block p-3 rounded-full bg-gray-700/50 
                      group-hover:bg-blue-800/50 
                      transition-colors duration-300">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              class="h-8 w-8 text-gray-300 group-hover:text-blue-300 transition-colors duration-300"
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d={skill.icon}
              />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">{skill.title}</h3>
          <p class="text-gray-400 text-sm">{skill.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
